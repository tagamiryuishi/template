<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	<!-- 対象のpackageを設定 -->
	<package name="com.internousdev.template.action" extends="struts-default">

		<!-- LoginAction -->
		<action name="LoginAction" class="com.internousdev.template.action.LoginAction" method="execute">
			<result name="success">buyItem.jsp</result>
			<result name="error">login.jsp</result>
		</action>

		<!-- AdminLoginAction -->
		<action name="AdminLoginAction" class="com.internousdev.template.action.AdminLoginAction" method="execute">
		     <result name="success">adminHome.jsp</result>
		     <result name="error">adminHome.jsp</result>
		     </action>

		<!-- HomeAction -->
		<action name="HomeAction" class="com.internousdev.template.action.HomeAction" method="execute">
			<result name="success">login.jsp</result>
		</action>

		<!-- GoHomeAction -->
		<action name="GoHomeAction" class="com.internousdev.template.action.GoHomeAction" method="execute">
			<result name="success">home.jsp</result>
		</action>



		<!-- UserCreateAction -->
		<action name="UserCreateAction" class="com.internousdev.template.action.UserCreateAction" method="execute">
			<result name="success">userCreate.jsp</result>
			<result name="back">login.jsp</result>
		</action>

		<!-- UserCreateConfirmAction -->
		<action name="UserCreateConfirmAction" class="com.internousdev.template.action.UserCreateConfirmAction" method="execute">
			<result name="success">userCreateConfirm.jsp</result>
			<result name="error">userCreate.jsp</result>
		</action>

		<!-- UserCreateCompleteAction -->
		<action name="UserCreateCompleteAction" class="com.internousdev.template.action.UserCreateCompleteAction" method="execute">
			<result name="success">userCreateComplete.jsp</result>
			<result name="error">userCreate.jsp</result>
		</action>

		<!-- BuyItemAction -->
		<action name="BuyItemAction" class="com.internousdev.template.action.BuyItemAction" method="execute">
			<result name="success">buyItemConfirm.jsp</result>
			<result name="error">buyItem.jsp</result>
		</action>

		<!-- AdminHomeAction -->
		<action name="AdminHomeAction" class="com.internousdev.template.action.AdminHomeAction" method="execute">
		    <result name="success">home.jsp</result>
		    <result name="error">adminHome.jsp</result></action>

		<!-- BuyItemConfirmAction -->
		<action name="BuyItemConfirmAction" class="com.internousdev.template.action.BuyItemConfirmAction" method="execute">
			<result name="success">buyItemComplete.jsp</result>
			<result name="back">buyItem.jsp</result>
		</action>

		<!-- BuyItemCompleteAction -->
		<action name="BuyItemCompleteAction" class="com.internousdev.template.action.BuyItemCompleteAction" method="execute">
			<result name="success">home.jsp</result>
		</action>

		<!-- MyPageAction -->
		<action name="MyPageAction" class="com.internousdev.template.action.MyPageAction" method="execute">
			<result name="success">myPage.jsp</result>
			<result name="error">myPage.jsp</result>
		</action>

		<!-- ProductListAction -->
		<action name="ProductListAction" class="com.internousdev.template.action.ProductListAction" method="execute">
			<result name="success">buyItem.jsp</result>
			<result name="error">home.jsp</result>
		</action>

		<!-- ProductBookListAction -->
		<action name="ProductBookListAction" class="com.internousdev.template.action.ProductListAction" method="execute">
			<result name="success">productBookList.jsp</result>
			<result name="error">home.jsp</result>
		</action>

		<!-- ProductListAction -->
		<action name="ProductListAction" class="com.internousdev.template.action.ProductListAction" method="execute">
			<result name="success">productList.jsp</result>
			<result name="error">home.jsp</result>
		</action>

		<!-- ProductListConfirmAction -->
		<action name="ProductListConfirmAction" class="com.internousdev.template.action.ProductListConfirmAction" method="execute">
			<result name="success">productListConfirm.jsp</result>
			<result name="error">productList.jsp</result>
		</action>

		<!-- ProductListCompleteAction -->
		<action name="ProductListCompleteAction" class="com.internousdev.template.action.ProductListCompleteAction" method="execute">
			<result name="success">productListComplete.jsp</result>
			<result name="error">productListConfirm.jsp</result>
		</action>

		<!-- LogoutAction -->
		<action name="LogoutAction" class="com.internousdev.template.action.LogoutAction" method="execute">
			<result name="success">login.jsp</result>
		</action>

	</package>
</struts>